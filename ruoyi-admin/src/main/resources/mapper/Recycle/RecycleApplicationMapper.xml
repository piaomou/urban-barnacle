<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.Recycle.mapper.RecycleApplicationMapper">
    
    <resultMap type="RecycleApplication" id="RecycleApplicationResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="clothesType"    column="clothes_type"    />
        <result property="estimatedWeight"    column="estimated_weight"    />
        <result property="appointmentTime"    column="appointment_time"    />
        <result property="address"    column="address"    />
        <result property="contactName"    column="contact_name"    />
        <result property="contactPhone"    column="contact_phone"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectRecycleApplicationVo">
        select id, user_id, clothes_type, estimated_weight, appointment_time, address, contact_name, contact_phone, status, remark, create_time, update_time from recycle_application
    </sql>

    <select id="selectRecycleApplicationList" parameterType="RecycleApplication" resultMap="RecycleApplicationResult">
        <include refid="selectRecycleApplicationVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="clothesType != null  and clothesType != ''"> and clothes_type = #{clothesType}</if>
            <if test="estimatedWeight != null "> and estimated_weight = #{estimatedWeight}</if>
            <if test="appointmentTime != null "> and appointment_time = #{appointmentTime}</if>
            <if test="address != null  and address != ''"> and address = #{address}</if>
            <if test="contactName != null  and contactName != ''"> and contact_name like concat('%', #{contactName}, '%')</if>
            <if test="contactPhone != null  and contactPhone != ''"> and contact_phone = #{contactPhone}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectRecycleApplicationById" parameterType="Long" resultMap="RecycleApplicationResult">
        <include refid="selectRecycleApplicationVo"/>
        where id = #{id}
    </select>

    <insert id="insertRecycleApplication" parameterType="RecycleApplication" useGeneratedKeys="true" keyProperty="id">
        insert into recycle_application
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="clothesType != null">clothes_type,</if>
            <if test="estimatedWeight != null">estimated_weight,</if>
            <if test="appointmentTime != null">appointment_time,</if>
            <if test="address != null and address != ''">address,</if>
            <if test="contactName != null and contactName != ''">contact_name,</if>
            <if test="contactPhone != null and contactPhone != ''">contact_phone,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="remark != null">remark,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="clothesType != null">#{clothesType},</if>
            <if test="estimatedWeight != null">#{estimatedWeight},</if>
            <if test="appointmentTime != null">#{appointmentTime},</if>
            <if test="address != null and address != ''">#{address},</if>
            <if test="contactName != null and contactName != ''">#{contactName},</if>
            <if test="contactPhone != null and contactPhone != ''">#{contactPhone},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateRecycleApplication" parameterType="RecycleApplication">
        update recycle_application
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="clothesType != null">clothes_type = #{clothesType},</if>
            <if test="estimatedWeight != null">estimated_weight = #{estimatedWeight},</if>
            <if test="appointmentTime != null">appointment_time = #{appointmentTime},</if>
            <if test="address != null and address != ''">address = #{address},</if>
            <if test="contactName != null and contactName != ''">contact_name = #{contactName},</if>
            <if test="contactPhone != null and contactPhone != ''">contact_phone = #{contactPhone},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteRecycleApplicationById" parameterType="Long">
        delete from recycle_application where id = #{id}
    </delete>

    <delete id="deleteRecycleApplicationByIds" parameterType="String">
        delete from recycle_application where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>